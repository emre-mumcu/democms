@using src.App_Lib.Filters
@model GlobalExceptionViewModel

@{
	ViewBag.Title = @Model?.StatusCode;
	ViewBag.PageDescription = @Model?.ApplicationException?.Message;
}

<div class="row mt-4">
	<div class="col-lg-12">
		<div class="card">
			<div class="card-body text-center">
				<h1><i class="fa fa-exclamation-circle fa-4x text-center text-danger"></i></h1>
				<h1>@Model?.StatusCode</h1>
				<p>@Model?.SourceType</p>
				<h6>@Model?.ApplicationException?.Message</h6>
				<p>@Model?.ApplicationException?.InnerException?.Message</p>
				<p>@ViewBag.EventTime</p>
				<p>@Model?.Source</p>
				<p>@Model?.ApplicationException?.StackTrace</p>
				<p>@Model?.Id</p>
				<p>@Model?.IsStatusCodeException</p>
			</div>
		</div>
	</div>
</div>

<p>Applied Filters:

@foreach (var item in @Model?.AppliedFilters ?? new List<string>())
{
<p>@item</p>
}

<p>Route Values: @Model?.RouteValues</p>